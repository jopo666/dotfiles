general {
    colors = false
    interval = 1
}

order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = "wifi"
    format_down = "no wifi"
}
disk "/" {
    format = "mem: %avail"
}
memory {
    format = "ram: %available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}
load {
    format = "cpu: %5min%"
}
volume master {
    format = "vol: %volume"
    format_muted = "vol: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
battery all {
    format = "bat: %percentage"
}
tztime local {
    format = "%D %H:%M "
}
